<render ...input>
  <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.6.2/css/bulma.css">
  <style>
    .is-indigo {
      background: #3f51b5;
    }

    .code {
      background: inherit;
      color: inherit;
      padding-left: 0px;
      padding-right: 0px;
    }
  </style>
  <section class="hero is-fullheight is-indigo">
